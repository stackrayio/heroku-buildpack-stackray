#!/bin/bash

indent() {
  sed -u 's/^/       /'
}

echo "-----> Found a .stackray file"

# Bail early but noisily
if [ ! -s $1/.stackray ]; then
  echo ".stackray empty. Skipping." | indent
  exit 0
fi

cd $1

if [ -n "$jar" ]; then # incase ensure_newline_at_eof_on_save is enabled
 echo Downloading $jar | indent

 extension="${jar##*.}" # http://stackoverflow.com/q/965053

 flag="-z" # by default use gz
 if [ "$extension" == "xz" ]; then flag="--xz"
 elif [ "$extension" == "bz2" ]; then flag="--bzip2"
 elif [ "$extension" == "tar" ]; then flag=""  # no compression
 fi

 curl -L --silent $url | tar x $flag
fi
